{
    "name": "drewroberts/media",
    "description": "Laravel Package for opinionated usage of Media (images & videos)",
    "keywords": [
        "laravel",
        "laravel package",
        "media"
    ],
    "homepage": "https://github.com/drewroberts/media",
    "license": "MIT",
    "authors": [
        {
            "name": "Drew Roberts",
            "email": "github@drewroberts.com",
            "homepage": "https://drewroberts.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "cloudinary-labs/cloudinary-laravel": "^3.0",
        "filament/filament": "^4.1",
        "illuminate/contracts": "^12.35",
        "roberts/support": "^1.0",
        "roberts/laravel-singledb-tenancy": "^1.0",
        "spatie/eloquent-sortable": "^4.5",
        "spatie/laravel-package-tools": "^1.92"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "nunomaduro/collision": "^8.6",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.6",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "DrewRoberts\\Media\\": "src/",
            "DrewRoberts\\Media\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DrewRoberts\\Media\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DrewRoberts\\Media\\MediaServiceProvider"
            ],
            "aliases": {
                "Media": "DrewRoberts\\Media\\Facades\\Media"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
